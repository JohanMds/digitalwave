---
import Layout from "../layouts/Layout.astro";
const URL = 'https://digitalwavecr.netlify.app'
---

<Layout title="Thank you page">
  <main class="w-screen h-screen flex flex-col justify-center items-center bg-orange-200">
    <div class="w-90 h-70 flex flex-col items-center justify-center gap-6 p-16 rounded-2xl shadow-md shadow-orange-600 bg-[#fdfdfda7] text-center border-2 border-black">
      <h1 class="text-5xl font-serif underline ">Thank You!</h1>
      
      <span>
        <p class="text-lg">
          Your message has been sent.
        </p>
        <p class="text-lg">
          You will soon receive a response to your message.
        </p>
      </span>
      
      <a class="bg-orange-600 p-2 rounded-3xl border-2 border-orange-700 focus:border-black hover:shadow-md hover:shadow-black text-white" href=`${URL}`>Go Back</a>
    </div>
  </main>
</Layout>